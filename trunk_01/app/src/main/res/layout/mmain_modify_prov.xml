<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical">

    <com.hbbc.util.MyTopbar
        android:id="@+id/province_include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        app:topbar_left_img="@drawable/global_back"
        app:topbar_left_img_height="@dimen/dp23"
        app:topbar_left_img_width="@dimen/dp25"
        app:topbar_marginleft_leftimg="@dimen/dp8"
        app:topbar_right_visible="gone"
        app:topbar_title_color="@color/white"
        app:topbar_title_size="@dimen/sp11"
    />
    <TextView
        android:id="@+id/mmain_modify_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/province_include"
        android:background="@color/edit_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:text="当前地区"
        android:textColor="#000"
    />
    <TextView
        android:id="@+id/modify_currrent_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_below="@+id/mmain_modify_area"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:text="北京"
    />
    <TextView
        android:id="@+id/mmain_modify_procity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/modify_currrent_area"
        android:background="@color/edit_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:text="全部省份"
        android:textColor="#000"
    />
    <ListView
        android:id="@+id/mmain_province_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mmain_modify_procity">
    </ListView>


</RelativeLayout>
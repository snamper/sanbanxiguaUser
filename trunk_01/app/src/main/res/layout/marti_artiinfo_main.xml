<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.hbbc.util.MyTopbar
        android:id="@+id/marti_info_include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        app:topbar_left_img="@drawable/global_back"
        app:topbar_left_img_height="@dimen/dp23"
        app:topbar_left_img_width="@dimen/dp25"
        app:topbar_marginleft_leftimg="@dimen/dp8"
        app:topbar_title_color="@color/white"
        app:topbar_title_size="@dimen/sp11"/>

    <TextView
        android:id="@+id/marti_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marti_info_include"
        android:layout_marginTop="@dimen/dp12"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView

        android:id="@+id/marti_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marti_info_title"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textSize="10sp"/>


    <ImageView
        android:id="@+id/marti_info_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/marti_info_time"
        android:layout_marginTop="9dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/marti_info_img"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp">

        <TextView
            android:id="@+id/marti_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/global_select_btn"
            android:textSize="12sp"/>
    </ScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.hbbc.util.MyTopbar
        android:id="@+id/top_bar"
        style="@style/TopBarStyle"
        app:topbar_title="物品订单支付"/>

    <include layout="@layout/mshare_layout_item_intro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f5f5f5">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="支付方式"
            android:textColor="@color/mshare_text_color_gray"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:background="#f5f5f5"
            android:paddingRight="40dp">

            <com.hbbc.util.MyLinearLayoutWithoutSelector
                android:id="@+id/ll_zfb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mshare_deposit_zfb_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="支付宝支付"/>

                <RadioButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mshare_order_payment_mode_selector"
                    android:button="@null"
                    android:enabled="true"/>
            </com.hbbc.util.MyLinearLayoutWithoutSelector>

            <com.hbbc.util.MyLinearLayoutWithoutSelector
                android:id="@+id/ll_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mshare_deposit_weixin_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="微信支付"/>

                <RadioButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mshare_order_payment_mode_selector"
                    android:button="@null"
                    android:enabled="false"/>
            </com.hbbc.util.MyLinearLayoutWithoutSelector>

            <com.hbbc.util.MyLinearLayoutWithoutSelector
                android:id="@+id/ll_third_party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mshare_deposit_third_party_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:text="第三方金融"/>

                <RadioButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mshare_order_payment_mode_selector"
                    android:button="@null"
                    android:enabled="false"/>
            </com.hbbc.util.MyLinearLayoutWithoutSelector>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/mshare_layout_bottom_bar"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/mnews_frg_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp194"
        app:indicator_height="@dimen/dp9"
        app:indicator_width="@dimen/dp9"
        app:is_auto_play="true"
        app:title_height="@dimen/dp28">

    </com.youth.banner.Banner>

    <com.hbbc.util.LoadMoreRecyclerView
        android:id="@+id/mnews_frg_recview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/edit_gray"
        android:dividerHeight="2dp">

    </com.hbbc.util.LoadMoreRecyclerView>
</LinearLayout>

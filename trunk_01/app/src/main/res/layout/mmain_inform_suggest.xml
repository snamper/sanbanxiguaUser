<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.hbbc.util.MyTopbar
        android:id="@+id/suggest_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        app:topbar_left_img="@drawable/global_back"
        app:topbar_left_img_height="@dimen/dp23"
        app:topbar_left_img_width="@dimen/dp25"
        app:topbar_marginleft_leftimg="@dimen/dp8"
        app:topbar_right_visible="gone"
        app:topbar_title_color="@color/white"
        app:topbar_title_size="@dimen/sp11"
    />

    <EditText
        android:id="@+id/suggest_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_below="@+id/suggest_layout"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp7"
        android:background="@drawable/mmain_suggest_edt"
        android:gravity="start"
        android:hint="@string/suggest_tip"
        android:padding="@dimen/dp5"
    />

    <Button
        android:id="@+id/submit_suggest"
        style="@style/LoginButtonThemeC"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:layout_below="@+id/suggest_et"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:text="@string/suggest_sgt"
        android:textStyle="normal"
    />

</RelativeLayout>

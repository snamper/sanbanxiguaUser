<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/modify_infom_include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/global_top_bar">

        <ImageView
            android:layout_marginLeft="@dimen/dp12"
            android:id="@+id/modify_inform_back"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp25"
            android:layout_marginTop="@dimen/dp8"
            android:src="@drawable/global_back" />

        <TextView
            android:id="@+id/modify_inform_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20" />

        <TextView
            android:id="@+id/modify_inform_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp8"
            android:text="@string/modify_finish"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_infom_include"
        android:orientation="vertical">

        <com.hbbc.util.MyCircleImageView
            android:id="@+id/modify_inform_pic"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:src="@drawable/mmain_unlisted_upic"
            />
        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/mmain_modify_pic"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/modify_man"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/mmain_modify_selectm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5"
                android:text="男"
                android:textSize="@dimen/sp20" />

            <ImageView
                android:id="@+id/modify_woman"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@drawable/mmain_modify_women" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5"
                android:text="女"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="姓名"
                android:textSize="@dimen/sp15" />

            <EditText
                android:focusable="false"
                android:id="@+id/modify_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@null"
                android:drawableBottom="@drawable/mmain_modify_etbg" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/modify_position"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="地区"
                android:textSize="@dimen/sp15" />

            <EditText
                android:focusable="false"
                android:id="@+id/modify_cityname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@null"
                android:drawableBottom="@drawable/mmain_modify_etbg" />

            <TextView
                android:id="@+id/modify_Detailed"
                android:layout_marginTop="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="详细住址"
                android:textSize="@dimen/sp15" />

            <EditText
                android:id="@+id/modify_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@null"
                android:drawableBottom="@drawable/mmain_modify_etbg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
